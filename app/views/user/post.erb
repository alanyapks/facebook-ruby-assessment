<h1>MY Questions</h1>

<% if logged_in? %>
<p>You are logged in as <%= @user.username %><br></p>
<%else%>
<h2>You are currently not logged in</h2><br>
<%end%>

<h2>My Questions</h2>

<% @posts.each_with_index do |p, index| %>
  <a href="/posts/<%= p.id %>">
    <p><%= "#{index + 1})  #{p.text}" %>  </p>
    <form action="/posts/<%= p.id %>" method="post">
		<input type="hidden" name="_method" value="delete">
		<input type="submit" value="Delete Question">
	</form>

  </a>
<% end %>

<br>
<br>

	<% if logged_in? %>

		<a href="/posts/new"><button>Ask a new question</button></a>
		<br>
		<a href="/users/<%= @user.id %>"><button>View My Profile</button></a>
		<br>
		<a href="/users/<%= @user.id %>/edit"><button>Edit Profile</button></a>
		<br>
		<br>
		<a href="/users/logout"><button>LOGOUT</button></a>
		<a href="/"><button>HOME</button></a>
		<a href="/posts"><button>posts</button></a>

	<%else%>

		<p>For existing users Login</p>
		<a href="/users"><button>Login</button></a>
		<p>For new users Sign Up</p>
		<a href="/users/new"><button>Sign Up</button></a>
		<br>
		<br>
		<a href="/users/logout"><button>LOGOUT</button></a>
		<a href="/"><button>HOME</button></a>
		<a href="/posts"><button>QUESTIONS</button></a>

	<%end%>